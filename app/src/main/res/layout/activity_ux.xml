<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <fragment
      android:id="@+id/ux_fragment"
      android:name="com.google.ar.sceneform.ux.ArFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/btnUp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="240dp"
      android:layout_marginTop="590dp"
      android:onClick="btnUp"
      android:text="Up"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnRotateLeft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="144dp"
      android:layout_marginTop="504dp"
      android:onClick="btnRotateLeft"
      android:text="Rotate Left"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnRotateRight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="144dp"
      android:layout_marginTop="552dp"
      android:onClick="btnRotateRight"
      android:text="Rotate Right"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnRotateUp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="504dp"
      android:onClick="btnRotateUp"
      android:text="Rotate Up"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnRotateDown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="552dp"
      android:onClick="btnRotateDown"
      android:text="Rotate Down"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnDown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="240dp"
      android:layout_marginTop="674dp"
      android:onClick="btnDown"
      android:text="Down"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnLeft"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="320dp"
      android:layout_marginTop="632dp"
      android:onClick="btnLeft"
      android:text="Left"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnRight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="160dp"
      android:layout_marginTop="632dp"
      android:onClick="btnRight"
      android:text="Right"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnForward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="632dp"
      android:onClick="btnForward"
      android:text="Forward"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnBackward"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="11dp"
      android:layout_marginTop="672dp"
      android:onClick="btnBackward"
      android:text="Backward"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <Button
      android:id="@+id/btnEditSet"
      android:layout_width="116dp"
      android:layout_height="52dp"
      android:layout_marginTop="37dp"
      android:onClick="btnStartInstructionSet"
      android:text="Edit Set"
      app:layout_constraintStart_toEndOf="@+id/spinnerChooseInstructionSet"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnAddObject"
      android:layout_width="173dp"
      android:layout_height="42dp"
      android:layout_marginStart="222dp"
      android:layout_marginTop="302dp"
      android:onClick="btnStartInstructionSet"
      android:text="Add Object"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnNextStep"
      android:layout_width="129dp"
      android:layout_height="48dp"
      android:layout_marginTop="664dp"
      android:layout_marginEnd="16dp"
      android:background="#fffbf0"
      android:text="Next Step"
      android:textColor="#030303"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.684"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnPreviousStep"
      android:layout_width="129dp"
      android:layout_height="48dp"
      android:layout_marginTop="664dp"
      android:background="#fffbf0"
      android:text="Previous Step"
      android:textColor="#030303"
      app:layout_constraintEnd_toStartOf="@+id/btnNextStep"
      app:layout_constraintTop_toTopOf="parent" />


  <Button
      android:id="@+id/btnSave"
      android:layout_width="129dp"
      android:layout_height="48dp"
      android:layout_marginTop="664dp"
      android:layout_marginEnd="128dp"
      android:background="#fffbf0"
      android:onClick="btnSave"
      android:text="Save"
      android:textColor="#030303"
      app:layout_constraintEnd_toStartOf="@+id/btnNextStep"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnSaveInstructionSet"
      android:layout_width="185dp"
      android:layout_height="48dp"
      android:layout_marginTop="160dp"
      android:layout_marginEnd="68dp"
      android:background="#fffbf0"
      android:onClick="btnSaveInstructionSet"
      android:text="Save Instruction Set"
      android:textColor="#030303"
      app:layout_constraintEnd_toStartOf="@+id/btnNextStep"
      app:layout_constraintTop_toTopOf="parent" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvObjects"
      android:layout_width="187dp"
      android:layout_height="195dp"
      android:layout_marginStart="217dp"
      android:layout_marginTop="105dp"
      android:background="#fffbf0"
      android:translationZ="100dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spinnerChooseInstructionSet"
      android:layout_width="286dp"
      android:layout_height="40dp"
      android:layout_marginTop="4dp"
      android:background="@android:color/white"
      android:spinnerMode="dropdown"
      android:textColor="#030303"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.05"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInformationView" />

  <TextView
      android:id="@+id/textInformationView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Please select an Instruction Set"
      android:textSize="17sp"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.571"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/ux_fragment" />

  <EditText
      android:id="@+id/editText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Choose your instruction sets name and click save"
      app:layout_constraintBottom_toTopOf="@+id/btnSaveInstructionSet"
      app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>

